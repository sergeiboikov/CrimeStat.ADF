{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "crimestatdafasbdev"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Source-Country-Load-Staging')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Load Country data from file to staging",
				"activities": [
					{
						"name": "copy-country-staging",
						"description": "Copy data from source to staging",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "/"
							},
							{
								"name": "Destination",
								"value": "[[staging].[Country_untyped]"
							}
						],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSetting",
									"recursive": false
								},
								"formatSettings": {
									"type": "DelimitedTextReadSetting",
									"skipLineCount": 0
								}
							},
							"sink": {
								"type": "AzureSqlSink",
								"preCopyScript": "TRUNCATE [staging].[Country_untyped];"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "name",
											"type": "String"
										},
										"sink": {
											"name": "name",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "alpha-2",
											"type": "String"
										},
										"sink": {
											"name": "alpha-2",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "alpha-3",
											"type": "String"
										},
										"sink": {
											"name": "alpha-3",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "country-code",
											"type": "String"
										},
										"sink": {
											"name": "country-code",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "iso_3166-2",
											"type": "String"
										},
										"sink": {
											"name": "iso_3166-2",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "region",
											"type": "String"
										},
										"sink": {
											"name": "region",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "sub-region",
											"type": "String"
										},
										"sink": {
											"name": "sub-region",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "intermediate-region",
											"type": "String"
										},
										"sink": {
											"name": "intermediate-region",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "region-code",
											"type": "String"
										},
										"sink": {
											"name": "region-code",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "sub-region-code",
											"type": "String"
										},
										"sink": {
											"name": "sub-region-code",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "intermediate-region-code",
											"type": "String"
										},
										"sink": {
											"name": "intermediate-region-code",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "dataset_src_country",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "dataset_dst_Country_untyped",
								"type": "DatasetReference"
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/dataset_src_country')]",
				"[concat(variables('factoryId'), '/datasets/dataset_dst_Country_untyped')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/dataset_dst_Country_untyped')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "crimestatdwhlinkedservice",
					"type": "LinkedServiceReference"
				},
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "name",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "alpha-2",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "alpha-3",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "country-code",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "iso_3166-2",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "region",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "sub-region",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "intermediate-region",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "region-code",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "sub-region-code",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "intermediate-region-code",
						"type": "nvarchar",
						"precision": 255,
						"scale": 255
					},
					{
						"name": "sysETLrunId",
						"type": "int",
						"precision": 10,
						"scale": 255
					},
					{
						"name": "sysCreatedAt",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "sysChangedAt",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "sysCreatedBy",
						"type": "int",
						"precision": 10,
						"scale": 255
					},
					{
						"name": "sysChangedBy",
						"type": "int",
						"precision": 10,
						"scale": 255
					}
				],
				"typeProperties": {
					"tableName": "[[staging].[Country_untyped]"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/dataset_src_country')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "crimestatstacsblinkedservice",
					"type": "LinkedServiceReference"
				},
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "ISOcountries.csv",
						"folderPath": "CrimeStat.Source.Countries/PreparedToUpload",
						"container": "crimestat-sourcefiles"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "name",
						"type": "String"
					},
					{
						"name": "alpha-2",
						"type": "String"
					},
					{
						"name": "alpha-3",
						"type": "String"
					},
					{
						"name": "country-code",
						"type": "String"
					},
					{
						"name": "iso_3166-2",
						"type": "String"
					},
					{
						"name": "region",
						"type": "String"
					},
					{
						"name": "sub-region",
						"type": "String"
					},
					{
						"name": "intermediate-region",
						"type": "String"
					},
					{
						"name": "region-code",
						"type": "String"
					},
					{
						"name": "sub-region-code",
						"type": "String"
					},
					{
						"name": "intermediate-region-code",
						"type": "String"
					}
				]
			}
		}
	]
}