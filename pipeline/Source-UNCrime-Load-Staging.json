{
	"name": "Source-UNCrime-Load-Staging",
	"properties": {
		"description": "Load UNCrime data from source files to staging",
		"activities": [
			{
				"name": "copy_uncrime_staging",
				"description": "Copy UNCrime data from source file to staging",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSetting",
							"recursive": true,
							"wildcardFileName": "*.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSetting"
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": "TRUNCATE TABLE staging.UNCrime_untyped"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"sink": {
									"name": "FileName",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Region",
									"type": "String"
								},
								"sink": {
									"name": "Region",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Sub Region",
									"type": "String"
								},
								"sink": {
									"name": "SubRegion",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Country",
									"type": "String"
								},
								"sink": {
									"name": "Country",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Count",
									"type": "String"
								},
								"sink": {
									"name": "Count",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Rate",
									"type": "String"
								},
								"sink": {
									"name": "Rate",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "Year",
									"type": "String"
								},
								"sink": {
									"name": "Year",
									"type": "String"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "dataset_src_uncrime",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "dataset_staging_uncrime_untyped",
						"type": "DatasetReference"
					}
				]
			}
		]
	}
}